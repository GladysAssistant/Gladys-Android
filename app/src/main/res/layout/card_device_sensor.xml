<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_device_sensor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    app:cardElevation="@dimen/card_elevation"
    app:optRoundCardCornerRadius="@dimen/card_radius"
    app:optRoundCardBackgroundColor="@color/secondaryColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding_lg">

        <ImageView
            android:id="@+id/device_sensor_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_bar_chart_24dp"
            android:layout_marginEnd="@dimen/card_padding_lg"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/device_sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/device_sensor_value"
            android:layout_toEndOf="@+id/device_sensor_icon"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/card_title_size"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/device_sensor_tag"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/device_sensor_name"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/device_sensor_value"
            android:layout_below="@+id/device_sensor_name"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/device_sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>

    </RelativeLayout>

</com.github.captain_miao.optroundcardview.OptRoundCardView>