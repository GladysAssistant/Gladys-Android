<?xml version="1.0" encoding="utf-8"?>
<shortcuts
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="25">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_message_24dp"
        android:shortcutId="shortcut_write_a_message"
        android:shortcutShortLabel="@string/new_message">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.gladysassistant.gladys.SplashActivity"
            android:targetPackage="com.gladysassistant.gladys">
        </intent>

        <intent
            android:action="com.gladysassistant.gladys.startChat"
            android:targetClass="com.gladysassistant.gladys.MainActivity"
            android:targetPackage="com.gladysassistant.gladys">
        </intent>
    </shortcut>
</shortcuts>